{
  "manifest_version": 3,
  "name": "Letterboxd DTDD Content Warning Display",
  "version": "1.0.0",
  "description": "Show Does The Dog Die content warnings on Letterboxd movie profiles",
  "permissions": ["storage"],
  "host_permissions": ["https://www.doesthedogdie.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Letterboxd DTDD Settings"
  },
  "options_ui": {
    "page": "settings.html",
    "open_in_tab": true
  },
  "content_scripts": [
    {
      "matches": ["https://letterboxd.com/film/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
