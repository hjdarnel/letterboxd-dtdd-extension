{
  "manifest_version": 3,
  "name": "Letterboxd DTDD",
  "version": "1.0.0",
  "description": "Adds helpful information to Letterboxd movie profiles",
  "permissions": [],
  "content_scripts": [
    {
      "matches": ["https://letterboxd.com/film/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
